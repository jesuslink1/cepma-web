---

<section
    class="relative bg-cover bg-center py-12 px-6 md:px-12"
    style="background-image: url('/images/fondo.png')"
>
    <div class="max-w-6xl mx-auto">
        <!-- Título del componente -->
        <h2 class="titulo-subrayado mb-32">
            ¿Por qué elegir María Auxiliadora?
        </h2>

        <!-- Tarjetas -->
        <div class="space-y-32 mt-20">
            {
                diferencias.map((item, index) => (
                    <div
                        class={`relative flex flex-col md:flex-row ${
                            index % 2 === 0
                                ? "md:flex-row"
                                : "md:flex-row-reverse"
                        } items-start`}
                    >
                        {/* Imagen */}
                        <div class="relative w-full md:w-1/2 z-20 md:-mt-22">
                            <img
                                src={item.imagen}
                                alt={item.titulo}
                                class="w-full h-64 md:h-80 object-cover rounded-xl shadow-2xl translate-y-6"
                            />
                        </div>

                        {/* Contenido de la tarjeta */}
                        <div
                            class={`relative z-10 bg-white shadow-lg rounded-3xl p-5 md:p-15 flex flex-col justify-between w-full md:w-1/2 mt-[-20px] md:mt-[-40px] ${
                                index % 2 === 0
                                    ? "md:ml-[-32px]"
                                    : "md:mr-[-32px]"
                            }`}
                        >
                            <h3 class="text-2xl font-bold text-[#2c9b9b] mb-4">
                                {item.titulo}
                            </h3>
                            <p class="text-gray-700 mb-6">{item.descripcion}</p>
                            <a
                                href="#"
                                class="inline-flex self-start bg-[#2c9b9b] hover:bg-[#136d6d] text-white text-sm font-semibold py-3 px-6 rounded-lg transition-transform duration-300 transform hover:scale-105 w-auto"
                            >
                                Leer más
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
